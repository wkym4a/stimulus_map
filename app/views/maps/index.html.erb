<!-- 「data-controller」開始 -->
<div data-controller="index-map">

  <p id="notice"><%= notice %></p>

  <h1>Maps</h1>
  <div data-controller="hello">
    <div class="" data-target="hello.output" >

    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @maps.each do |map| %>
        <tr>
          <td><%= map.name %></td>
          <td><%= map.address %></td>
          <td><%= map.latitude %></td>
          <td><%= map.longitude %></td>
          <td><%= link_to 'Show', map %></td>
          <td><%= link_to 'Edit', edit_map_path(map) %></td>
          <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><input type="button" value="移動" data-action="click->index-map#move"></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div id="map" style="width:800px; height:400px"  data-target="index-map.map" ></div>

</div>

<br>

<%= link_to 'New Map', new_map_path %>
